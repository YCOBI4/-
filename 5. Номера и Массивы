// 24. Дан массив размера N. Найти номера двух ближайших чисел этого массива.
//

#include <iostream>
#include <cmath>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	cout << "Введите 6 любых чисел" << endl;

	int R1, R2, R3, R4, R5;
	const int N = 6;
	int mas[N]{ };//вводится массив
	
	for (int i = 0; i < N; i++)//инициализация и ввод элементов массива
		cin >> mas[i];
	
	R1 = abs(mas[0] - mas[1]); //вычисление разностей чисел ,введенных в массив пользователем
	R2 = abs(mas[1] - mas[2]);
	R3 = abs(mas[2] - mas[3]);
	R4 = abs(mas[3] - mas[4]);
	R5 = abs(mas[4] - mas[5]);

	cout << "Номера ближайших чисел: " << endl;

	if ( ((R1 < R2)||(R1==R2))&& ((R1 < R3) || (R1 == R3)) && ((R1 < R4) || (R1 == R4)) && ((R1 < R5) || (R1 == R5)))//сравнение разностей
	{
		cout << "1 и 2" << endl;
	}

	if (((R2 < R1) || (R2 == R1)) && ((R2 < R3) || (R2 == R3)) && ((R2 < R4) || (R2 == R4)) && ((R2 < R5) || (R2 == R5)))
	{
		cout  << "2 и 3" << endl;
	}

	if (((R3 < R2) || (R3 == R2)) && ((R3 < R1) || (R3 == R1)) && ((R3 < R4) || (R3 == R4)) && ((R3 < R5) || (R3 == R5)))
	{
		cout  << "3 и 4" << endl;
	}

	if (((R4 < R2) || (R4 == R2)) && ((R4 < R3) || (R4 == R3)) && ((R4 < R1) || (R4 == R1)) && ((R4 < R5) || (R4 == R5)))
	{
		cout  << "4 и 5" << endl;
	}

	if (((R5 < R2) || (R5 == R2)) && ((R5 < R3) || (R5 == R3)) && ((R5 < R4) || (R5 == R4)) && ((R5 < R1) || (R5 == R1)))
	{
		cout  << "5 и 6" << endl;
	}

	//Номера чисел отвечающих за наименьшую разность будут выведены в ответ
	//Если наименьших разностей несколько, программа выведет номера всех чиел отвечающих за эти разности













}   
