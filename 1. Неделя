# Programs-on-c-
//24. Составить программу для определения того, каким днем недели будет k-й день 
//високосного года, если 1 января этого года было : а) понедельником, б) четвергом

#include <iostream>
#include <cmath>
using namespace std;

int main()//дни недели в программе связаны с определенными значениями: Понедельник - 6, Вторник - 5, Среда - 4, Четверг - 3, Пятница - 2, Суббота - 1, Воскресенье - 0
{
	setlocale(LC_ALL, "Rus");
	int a, b, c;

	cout << "Введите 6, если Понедельник" << endl << "Введите 3, если Четверг" << endl;//выбор дня недели для 1 января
	cin >> b;
	if (b != 3 && b != 6)
	{
		cout << "Неверное значение!" << endl;//проверка введенных значений
		return 0;
	}
	c = 0;
	cout << "День ";//ввод номера дня високосного года
	cin >> a;
	if (a > 366)
	{
		cout << "Выбрано слишком большое значение!";//проверка введенных значений
		return 0;
	}
	while (b < a)//прибавляет 7 к числовому значению дня недели 1 января до тех пор, пока оно не станет больше введенного номера дня
	{
		b = b + 7;
	}
	c = b - a;//разность полученного ранее значения и значения номера дня
	if (c == 6)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Понедельник";
	}
	if (c == 5)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Вторник";
	}
	if (c == 4)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Среда";
	}
	if (c == 3)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Четверг";
	}
	if (c == 2)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Пятница";
	}
	if (c == 1)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Суббота";
	}
	if (c == 0)// в зависимости от полученного значения выводит в командную строку требуемый день недели
	{
		cout << "Воскресенье" << endl;
	}
	cout << endl;
}
