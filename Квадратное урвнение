# -//5. Составить программу решения квадратного уравнения с произвольными
//вещественными коэффициентами

#include <iostream>
#include <cmath>
using namespace std;


int main()
{
	setlocale(LC_ALL, "Rus");

	double a, b, c, x1, x2, z;

	cout << "Введите a=";// здесь производитсяч ввод данных для уравнения вида a*x^2 + b*x + c = 0
	cin >> a;
	cout << "Введите b=";// здесь производитсяч ввод данных для уравнения вида a*x^2 + b*x + c = 0
	cin >> b;
	cout << "Введите c=";// здесь производитсяч ввод данных для уравнения вида a*x^2 + b*x + c = 0
	cin >> c;

	z = (b * b) - (4 * a * c);// вычисление дискриминанта

	if (z < 0)// проверка значения дискриминанта, в данном случае если дискриминант меньше нуля
	{
		cout << "Корней нет" << endl;

	}

	if (z == 0)// проверка значения дискриминанта, в данном случае если дискриминант равен нулю
	{
		x1 = (-b) / (2 * a);
		cout << "Корнем уравнения является" << x1;

	}
	if (z > 0)// проверка значения дискриминанта, в данном случае если дискриминант больше нуля
	{
		x1 = (-b - sqrt(z)) / (2 * a);
		x2 = (-b + sqrt(z)) / (2 * a);
		cout << "Корнями уравнения являются" << endl << x1 << endl << x2;
	}
}
